  public static List<Lead> selectNOALeadsBySAPBillToId(Set<String> billToIds) {
    return [
      SELECT
        Id,
        Name,
        Company,
        Salutation,
        FirstName,
        LastName,
        NOA_Application_Number__c,
        Email,
        Phone,
        SP_Email__c,
        Status,
        Partership_Email__c,
        CLG_Email__c,
        CreatedDate,
        SAP_Bill_To_ID__c,
        Parent_Corporate_Specialty_Hospital__c,
        New_Shipping_Location__c,
        Billing_Street_1__c,
        Billing_City__c,
        Billing_State__c,
        Billing_Zip_Code__c,
        Corporate_Account__c,
        Specialty_Hospital__c,
        Specialty_Description__c
      FROM Lead
      WHERE
        Company = 'New Online Account'
        AND Status != 'To be Deleted'
        AND Parent_Corporate_Specialty_Hospital__c = TRUE
        AND SAP_Bill_To_ID__c != NULL
        AND SAP_Bill_To_ID__c = :billToIds
    ];
  }
    

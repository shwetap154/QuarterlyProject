<apex:component > 
    <head>
        <style>
            
            footer img{height:2.25em;vertical-align:middle;float: left;} 
            footer .logo{padding:.75em 0;float:left} 
            footer{margin:0;margin-top: 5em} 
            footer .inner{text-align:right;max-width:1000px;margin:auto;padding:0 20px} 
            footer .contact{display:inline-block;position:relative;vertical-align:middle;margin:1.25em 0} 
            footer .contact>a{text-transform:uppercase;padding-bottom:1px;border-bottom:thin solid rgba(255,100,0,0.5)} 
            footer .contact>a,footer .contact>a:visited,footer .contact>a:hover,footer .contact>a:active{color:inherit} 
            footer .popup_container{display:none;position:absolute;bottom:0;padding-bottom:3.5em;left:50%;margin-left:-3.5em} 
            footer .popup{position:relative;padding:1.5em;background-color:white;color:#585858;text-align:center;width:15em} 
            footer .popup a{display:block;color:#ff6400;margin:1em 0} 
            footer .popup .text{text-transform:uppercase;font-weight:bold;font-size:0.75em;line-height:1} 
            footer .popup .email,footer .popup .phone{font-size:1.125em} 
            footer .popup:after{content:'';display:block;position:absolute;left:-1em;margin-left:50%;top:100%;border-color:transparent;border-width:1em;border-style:solid;border-top-color:white} 
            footer .contact:hover .popup_container{display:block} 
            footer .popup_container:hover{display:block}  
            footer .popup{right:0;position:relative;bottom:100%} 
            footer .popup:after{display:none} 
            footer .popup_container:after{content:'';display:block;position:absolute;left:-1em;margin-left:50%;top:0;border-color:transparent;border-width:1em;border-style:solid;border-top-color:white} 
            }   
            footer .legal { 
                Font: 0.7em Arial,Helvetica,sans-serif !important;
                text-align: left; 
            }
            footer ul li, ol li {
                margin-left: 0 !important;
                padding-left: 0 !important;
            }
        </style>
